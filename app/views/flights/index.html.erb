
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div class="well well-lg">
      <h3>Search for Flights</h3>
      <%= render 'flights/search' %>
    </div>
    </br>
    <% if @flights %>
    <div class="well well-lg">
      <table class="table">
        <h3>Select a Flight</h3>
        <%= form_tag(new_booking_path, method: :get) do %>
        <thead>
          <th></th>
          <th>Flight #</th>
          <th>From</th>
          <th>To</th>
          <th>Time</th>
          <th>Date</th>

        </thead>
        <tbody>
          <% @flights.each_with_index do |flight,i| %>
          <tr>
            <% if i ==0 %>
              <td><%= radio_button_tag(:flight_id, flight.id,checked:"checked") %></td>
              <%= render 'flights/flights', flight: flight%>
            <% else %>
              <td><%= radio_button_tag(:flight_id, flight.id) %></td>
              <%= render 'flights/flights', flight: flight%>
            <% end %>
          <tr>
          <% end %>
        </tbody>
      </table>
      <%= hidden_field_tag(:passengers, params[:passengers]) %>
      <%= submit_tag('Choose Flight', class: 'btn btn-success btn-lg') %>
      <% end %>
    </div>
    <% end %>

  </div>
</div>
